<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>${project.version}</id>
    <formats>
        <format>tar.gz</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>${project.basedir}/target/PYX-Reloaded-jar-with-dependencies.jar</source>
            <destName>PYX-Reloaded.jar</destName>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>${project.basedir}/pyx.sqlite</source>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>${project.basedir}/preferences.json.default</source>
            <destName>preferences.json</destName>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>${project.basedir}/server.sqlite.default</source>
            <destName>server.sqlite</destName>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/dist</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>